## Feature Section

```tsx
// components/sections/feature.tsx
'use client';

import { motion, useInView } from 'framer-motion';
import { useRef } from 'react';
import { slideInLeft, slideInRight } from '@/lib/motion';

interface FeatureProps {
  eyebrow: string;
  title: string;
  description: string;
  features?: string[];
  imagePosition?: 'left' | 'right';
  children?: React.ReactNode;
}

export function Feature({ eyebrow, title, description, features, imagePosition = 'right', children }: FeatureProps) {
  const ref = useRef(null);
  const isInView = useInView(ref, { once: true, margin: '-100px' });

  return (
    <section ref={ref} className="py-24 md:py-32">
      <div className="container px-4 md:px-6">
        <div className={`grid gap-12 lg:grid-cols-2 lg:gap-16 items-center ${imagePosition === 'left' ? 'lg:grid-flow-dense' : ''}`}>
          <motion.div
            initial="hidden"
            animate={isInView ? 'show' : 'hidden'}
            variants={imagePosition === 'right' ? slideInLeft : slideInRight}
            className={imagePosition === 'left' ? 'lg:col-start-2' : ''}
          >
            <span className="text-sm font-semibold text-primary uppercase tracking-wider">{eyebrow}</span>
            <h2 className="mt-4 font-display text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight">{title}</h2>
            <p className="mt-6 text-lg text-foreground-muted leading-relaxed">{description}</p>
            {features && (
              <ul className="mt-8 space-y-4">
                {features.map((feature, i) => (
                  <li key={i} className="flex items-start gap-3">
                    <div className="mt-1 h-5 w-5 rounded-full bg-primary/10 flex items-center justify-center">
                      <svg className="h-3 w-3 text-primary" fill="currentColor" viewBox="0 0 20 20">
                        <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd" />
                      </svg>
                    </div>
                    <span className="text-foreground-muted">{feature}</span>
                  </li>
                ))}
              </ul>
            )}
          </motion.div>

          <motion.div
            initial="hidden"
            animate={isInView ? 'show' : 'hidden'}
            variants={imagePosition === 'right' ? slideInRight : slideInLeft}
            className={`relative ${imagePosition === 'left' ? 'lg:col-start-1 lg:row-start-1' : ''}`}
          >
            <div className="relative rounded-2xl overflow-hidden bg-secondary aspect-[4/3]">
              {children}
            </div>
          </motion.div>
        </div>
      </div>
    </section>
  );
}
